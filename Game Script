        function updateDisplay() {
            document.getElementById('economy-val').textContent = Math.round(gameState.economy);
            document.getElementById('stability-val').textContent = Math.round(gameState.stability);
            document.getElementById('politics-val').textContent = Math.round(gameState.politics);
            document.getElementById('corruption-val').textContent = Math.round(gameState.corruption);
            document.getElementById('days').textContent = gameState.days;
            
            // Format population
            const pop = gameState.population;
            let popText;
            if (pop >= 1000000) {
                popText = (pop / 1000000).toFixed(1) + 'M';
            } else if (pop >= 1000) {
                popText = (pop / 1000).toFixed(0) + 'K';
            } else {
                popText = pop.toString();
            }
            document.getElementById('population-val').textContent = popText;
            
            updateBar('economy', gameState.economy);
            updateBar('stability', gameState.stability);
            updateBar('politics', gameState.politics);
            updateBar('corruption', gameState.corruption);
            
            // Population bar as percentage of starting population
            const popPercent = (gameState.population / 10000000) * 100;
            updateBar('population', popPercent);
        }
        
        function updateBar(stat, value) {
            const bar = document.getElementById(stat + '-bar');
            const clamped = Math.max(0, Math.min(100, value));
            bar.style.width = clamped + '%';
            
            if (stat === 'corruption') {
                bar.className = 'stat-fill ' + (clamped < 40 ? 'good' : clamped < 70 ? 'okay' : 'bad');
            } else {
                bar.className = 'stat-fill ' + (clamped > 60 ? 'good' : clamped > 30 ? 'okay' : 'bad');
            }
        }
        
        function addEvent(message) {
            const log = document.getElementById('event-log');
            const eventDiv = document.createElement('div');
            eventDiv.className = 'event-item';
            eventDiv.textContent = message;
            log.insertBefore(eventDiv, log.firstChild);
        }
        
        function modifyStat(stat, amount) {
            gameState[stat] = Math.max(0, Math.min(100, gameState[stat] + amount));
        }
        
        function checkGameOver() {
            let gameOverMessage = "";
            
            if (gameState.economy <= 0) {
                gameOverMessage = "üí∏ Economy collapsed! Your country is bankrupt!";
            } else if (gameState.stability <= 0) {
                gameOverMessage = "üò° Mass riots overthrew your government!";
            } else if (gameState.politics <= 0) {
                gameOverMessage = "üó≥Ô∏è Parliament voted no confidence! You're out!";
            } else if (gameState.corruption >= 100) {
                gameOverMessage = "üö® Total corruption! International sanctions ended your regime!";
            } else if (gameState.population <= 100000) {
                gameOverMessage = "üë• Everyone fled your country! No citizens remain!";
            }
            
            if (gameOverMessage) {
                // Add a final insult
                const finalInsults = [
                    "Honestly, we all saw this coming.",
                    "You lasted longer than we expected. Still terrible though.",
                    "Well, that was embarrassing to watch.",
                    "Historians will study your failures for generations.",
                    "At least you're consistently incompetent.",
                    "Your country deserved better than you.",
                    "Maybe try playing on easy mode? Oh wait, this IS easy mode.",
                    "You somehow made things worse with every decision.",
                    "The bar was on the ground, and you brought a shovel.",
                    "Please don't put 'dictator' on your resume.",
                    "Please don't try to use hacks for help this time. They don't work!",
                    "Imagine losing at a game made on a Chromebook..."
                ];
                
                gameOverMessage += "\n\n" + finalInsults[Math.floor(Math.random() * finalInsults.length)];
                endGame(gameOverMessage);
                return true;
            }
            return false;
        }
        
        function endGame(message) {
            gameState.gameOver = true;
            document.getElementById('game-over-msg').textContent = message;
            document.getElementById('final-days').textContent = gameState.days;
            document.getElementById('game-over').style.display = 'flex';
        }
        
        function randomEvent() {
            // 70% chance of an event happening - slightly less frequent
            if (Math.random() < 0.70) {
                const event = events[Math.floor(Math.random() * events.length)];
                addEvent(event.name);
                
                if (event.economy) modifyStat('economy', event.economy);
                if (event.stability) modifyStat('stability', event.stability);
                if (event.politics) modifyStat('politics', event.politics);
                if (event.corruption) modifyStat('corruption', event.corruption);
                if (event.population) {
                    gameState.population = Math.max(0, gameState.population + event.population);
                }
                
                // Add insult 40% of the time after bad events
                if (Math.random() < 0.4 && (event.economy < 0 || event.stability < 0 || event.politics < 0)) {
                    const insult = insults[Math.floor(Math.random() * insults.length)];
                    setTimeout(() => addEvent("üí¨ " + insult), 500);
                }
                
                // 15% chance of a DOUBLE DISASTER (reduced from 25%)
                if (Math.random() < 0.15) {
                    const event2 = events[Math.floor(Math.random() * events.length)];
                    addEvent("üî•üî• AND IMMEDIATELY: " + event2.name);
                    
                    if (event2.economy) modifyStat('economy', event2.economy);
                    if (event2.stability) modifyStat('stability', event2.stability);
                    if (event2.politics) modifyStat('politics', event2.politics);
                    if (event2.corruption) modifyStat('corruption', event2.corruption);
                    if (event2.population) {
                        gameState.population = Math.max(0, gameState.population + event2.population);
                    }
                }
            }
        }
        
        function passDay() {
            if (gameState.gameOver) return;
            
            gameState.days++;
            
            // Check paperwork deadline
            if (gameState.paperworkPending) {
                gameState.paperworkDeadline--;
                updatePaperworkTimer();
                
                if (gameState.paperworkDeadline <= 0) {
                    missedPaperwork();
                    return;
                }
            }
            
            // MUCH HARSHER natural decay/growth
            modifyStat('corruption', Math.random() * 3 + 1); // Corruption grows slower
            modifyStat('stability', -(Math.random() * 1.5 + 0.5)); // Stability decays less
            modifyStat('economy', -(Math.random() * 1)); // Economy bleeds slower
            modifyStat('politics', -(Math.random() * 0.8)); // Politics erode slower
            
            // Population naturally declines less
            const popLoss = Math.floor(Math.random() * 10000 + 5000);
            gameState.population = Math.max(0, gameState.population - popLoss);
            
            // Random insults based on performance
            if (gameState.days % 5 === 0 && Math.random() < 0.5) {
                if (gameState.corruption > 70) {
                    addEvent("üí¨ Your corruption levels are off the charts. Impressive... in the worst way.");
                } else if (gameState.economy < 30) {
                    addEvent("üí¨ The economy is in shambles. Have you considered resigning?");
                } else if (gameState.stability < 30) {
                    addEvent("üí¨ People are rioting in the streets. But sure, keep doing what you're doing.");
                } else if (gameState.population < 5000000) {
                    addEvent("üí¨ Half your citizens have fled. Maybe it's you?");
                }
            }
            
            randomEvent();
            
            // Random paperwork appears! (20% chance, reduced from 30%)
            if (!gameState.paperworkPending && Math.random() < 0.20) {
                showPaperwork();
            }
            
            updateDisplay();
            
            // Events happen faster as time goes on!
            const speed = Math.max(1500, 3000 - (gameState.days * 30));
            
            if (!checkGameOver()) {
                setTimeout(passDay, speed);
            }
        }
        
        function investEconomy() {
            modifyStat('politics', -12);
            modifyStat('economy', 15);
            modifyStat('corruption', 6);
            gameState.population = Math.max(0, gameState.population - 20000);
            addEvent("üìä Economic investment... but officials are skimming!");
            
            if (Math.random() < 0.3) {
                const insult = insults[Math.floor(Math.random() * insults.length)];
                setTimeout(() => addEvent("üí¨ " + insult), 400);
            }
            
            updateDisplay();
            checkGameOver();
        }
        
        function crackdownCorruption() {
            modifyStat('corruption', -20);
            modifyStat('politics', -12);
            modifyStat('stability', -6);
            gameState.population = Math.max(0, gameState.population - 50000);
            addEvent("‚öñÔ∏è Anti-corruption drive - powerful enemies AND angry citizens!");
            
            if (Math.random() < 0.3) {
                const insult = insults[Math.floor(Math.random() * insults.length)];
                setTimeout(() => addEvent("üí¨ " + insult), 400);
            }
            
            updateDisplay();
            checkGameOver();
        }
        
        function populistPolicy() {
            modifyStat('stability', 12);
            modifyStat('economy', -12);
            modifyStat('corruption', 4);
            gameState.population += 30000; // People happy, for now
            addEvent("üé§ Populist measures - treasury drained, corrupt officials enriched!");
            
            if (Math.random() < 0.25) {
                const insult = insults[Math.floor(Math.random() * insults.length)];
                setTimeout(() => addEvent("üí¨ " + insult), 400);
            }
            
            updateDisplay();
            checkGameOver();
        }
        
        function negotiatePolitics() {
            modifyStat('politics', 15);
            modifyStat('economy', -8);
            modifyStat('corruption', 8);
            gameState.population = Math.max(0, gameState.population - 25000);
            addEvent("ü§ù Political deals made... with corrupt compromises!");
            
            if (Math.random() < 0.3) {
                const insult = insults[Math.floor(Math.random() * insults.length)];
                setTimeout(() => addEvent("üí¨ " + insult), 400);
            }
            
            updateDisplay();
            checkGameOver();
        }
        
        function doNothing() {
            addEvent("üò¥ You did nothing... things get worse!");
            modifyStat('corruption', 8);
            modifyStat('stability', -6);
            modifyStat('economy', -4);
            modifyStat('politics', -4);
            gameState.population = Math.max(0, gameState.population - 100000);
            
            // Higher chance of insult when doing nothing
            if (Math.random() < 0.6) {
                const insult = insults[Math.floor(Math.random() * insults.length)];
                setTimeout(() => addEvent("üí¨ " + insult), 400);
            }
            
            updateDisplay();
            checkGameOver();
        }
        
        // Start the game (only when button clicked)
        
        // Paperwork functions
        function showPaperwork() {
            gameState.paperworkPending = true;
            gameState.paperworkDeadline = 7; // 7 ticks to sign (increased from 5)
            gameState.currentPaperwork = paperworkTemplates[Math.floor(Math.random() * paperworkTemplates.length)];
            
            document.getElementById('paperwork-title').textContent = 'üìã ' + gameState.currentPaperwork.title;
            document.getElementById('paperwork-text').textContent = gameState.currentPaperwork.text;
            document.getElementById('paperwork-modal').style.display = 'flex';
            document.getElementById('signature-input').value = '';
            document.getElementById('sign-button').disabled = true;
            
            updatePaperworkTimer();
            addEvent("üìã URGENT PAPERWORK REQUIRES YOUR SIGNATURE!");
        }
        
        function updatePaperworkTimer() {
            const timer = document.getElementById('paperwork-timer');
            if (gameState.paperworkPending) {
                timer.textContent = `‚è∞ YOU HAVE ${gameState.paperworkDeadline} DAYS TO SIGN OR FACE CONSEQUENCES!`;
            }
        }
        
        function signPaperwork() {
            if (!gameState.paperworkPending) return;
            
            const effect = gameState.currentPaperwork.effect;
            
            addEvent("‚úçÔ∏è Paperwork signed: " + gameState.currentPaperwork.title);
            
            if (effect.economy) modifyStat('economy', effect.economy);
            if (effect.stability) modifyStat('stability', effect.stability);
            if (effect.politics) modifyStat('politics', effect.politics);
            if (effect.corruption) modifyStat('corruption', effect.corruption);
            if (effect.population) {
                gameState.population = Math.max(0, gameState.population + effect.population);
            }
            
            closePaperwork();
        }
        
        function missedPaperwork() {
            addEvent("üíÄ PAPERWORK DEADLINE MISSED! SEVERE PENALTIES APPLIED!");
            
            // Harsh penalties for missing paperwork (reduced from before)
            modifyStat('economy', -15);
            modifyStat('stability', -12);
            modifyStat('politics', -18);
            modifyStat('corruption', 8);
            gameState.population = Math.max(0, gameState.population - 200000);
            
            closePaperwork();
            
            updateDisplay();
            
            if (!checkGameOver()) {
                const speed = Math.max(1500, 3000 - (gameState.days * 30));
                setTimeout(passDay, speed);
            }
        }
        
        function closePaperwork() {
            gameState.paperworkPending = false;
            gameState.currentPaperwork = null;
            gameState.paperworkDeadline = 0;
            document.getElementById('paperwork-modal').style.display = 'none';
            updateDisplay();
            checkGameOver();
        }
        
        // Enable sign button when correct text is typed
        document.getElementById('signature-input').addEventListener('input', function(e) {
            const btn = document.getElementById('sign-button');
            btn.disabled = e.target.value.trim().toUpperCase() !== 'I APPROVE';
        });
        
        document.getElementById('signature-input').addEventListener('keypress', function(e) {
            if (e.key === 'Enter' && !document.getElementById('sign-button').disabled) {
                signPaperwork();
            }
        });
    </script>
